{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,  // ← ADD THIS: Fixes JSON import errors
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true  // ← ADD: Prevents TS from emitting files (common for React setups)
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
